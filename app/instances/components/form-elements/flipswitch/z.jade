div.component-flipswitch
	div.label-container
		label.label(for="flipswitch") flipswitch
	div.input-container
		input.flipswitch(
			id="flipswitch"
			name="flipswitch"
			max="1"
			min="0"
			type="range"
			aria-describedby="disclosure-flipswitch"
			)
	div.disclosure.hidden#disclosure-flipswitch div.disclosure
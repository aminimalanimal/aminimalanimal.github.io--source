div.field
	div.label_container
		label.label(for="input") label
		button.button.button-tooltip(role="button") info
	div.input_container
		input.input(
			id="input"
			type="text"
			name="text"
			aria-describedby="disclosure"
			placeholder="input"
			)
		button.button.button-extra_feature(role="button") button
	div.error_message#error_message div.error_message
	div.disclosure#disclosure div.disclosure